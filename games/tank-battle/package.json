{
  "name": "tank-battle",
  "version": "1.0.0",
  "description": "Tank Battle - Classic 4399 style tank game",
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=build/index.js --define:process.env.NODE_ENV=\\\"production\\\" --format=esm --target=es2015 --minify",
